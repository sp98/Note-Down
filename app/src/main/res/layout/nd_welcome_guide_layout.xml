<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/Welcome_Guide"
    >

    <TextView
        android:textSize="40dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/welcome_message_1"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/add_button_on_welcome_message"
        android:layout_centerHorizontal="true" />

    <TextView
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="to"
        android:id="@+id/welcome_message_2"
        android:layout_below="@+id/welcome_message_1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NOTE DOWN"
        android:textSize="60dp"
        android:id="@+id/welcome_message_3"
        android:layout_below="@+id/welcome_message_2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="An easy way to Create your Notes and share them across with your Friends and Colleagues. Start creating notes using the 'ADD' button above."
        android:layout_margin= "25dp"
        android:id="@+id/welcome_message_4"
        android:layout_below="@+id/welcome_message_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:padding="2dp"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Dismiss"
        android:id="@+id/dismiss"
        android:layout_alignTop="@+id/gotIt"
        android:layout_toLeftOf="@+id/welcome_message_2"
        android:layout_toStartOf="@+id/welcome_message_2" />

    <Button
        android:padding="2dp"
        android:textSize="22dp"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind me later"
        android:id="@+id/gotIt"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/welcome_message_4"
        android:layout_alignEnd="@+id/welcome_message_4" />

    <Button

        android:textSize="22dp"
        android:backgroundTintMode="screen"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/add_button_on_welcome_message"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/welcome_message_4"
        android:layout_alignEnd="@+id/welcome_message_4" />


</RelativeLayout>