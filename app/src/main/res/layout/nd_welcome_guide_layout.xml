<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/Welcome_Guide"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/welcome_message_1"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/add_button_on_welcome_message"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="to"
        android:id="@+id/welcome_message_2"
        android:layout_below="@+id/welcome_message_1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NOTE DOWN"
        android:textSize="35dp"
        android:id="@+id/welcome_message_3"
        android:layout_below="@+id/welcome_message_2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="An easy way to Create your Notes and share them across with your Friends and Colleagues. Start creating notes using the 'ADD' button above."
        android:layout_margin= "25dp"
        android:id="@+id/welcome_message_4"
        android:layout_below="@+id/welcome_message_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimiss"
        android:id="@+id/dismiss"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/welcome_message_4"
        android:layout_alignLeft="@+id/welcome_message_1"
        android:layout_alignStart="@+id/welcome_message_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got it"
        android:id="@+id/gotIt"
        android:layout_alignTop="@+id/dismiss"
        android:layout_alignRight="@+id/welcome_message_4"
        android:layout_alignEnd="@+id/welcome_message_4" />

    <Button
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/add_button_on_welcome_message"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/welcome_message_1"
        android:layout_toEndOf="@+id/welcome_message_1" />


</RelativeLayout>